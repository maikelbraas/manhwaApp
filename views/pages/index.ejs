<h1>Latest update</h1>
<div class="manhwa-rows card-group" id="manhwas">
  <div>
    <% for(let manhwa of manhwas){ %>
    <div class="card">
      <div class="g-0 d-flex d-flex-home h-100">
        <img
          data-src="manhwaImages/<%- manhwa.image %>"
          class="rounded-start manga-image m-auto lazyload"
          style="width: 200px !important"
          alt="" />
        <div class="card-body pb-0">
          <a
            href="/manhwa/<%- manhwa.mid %>"
            class="card-link text-decoration-none text-reset">
            <h5 class="card-title text-decoration-underline">
              <%- manhwa.title %>
            </h5></a
          >
          <p class="card-text">
            <small class="card-chapter">Chapters <%- manhwa.chapters %></small>
            |
            <small class="card-time"
              >Update: <%- new Date(manhwa.lastUpdate).toLocaleString('nl-NL', {
              timeZone: Intl.DateTimeFormat().resolvedOptions().timeZone
              }).slice(0, -3) %>
            </small>
            <br />
            <small class="card-status"
              >Status: <%- manhwa.status.replace(/\s/g, '') %>
              <i
                class="bi bi-circle-fill <%- manhwa.status.toLowerCase().replace(/\s/g, '') %>"></i
            ></small>
            |
            <small class="card-source"
              >Source: <%- manhwa.baseurl.split('/')[2].split('.')[0]; %></small
            >
          </p>
          <p class="card-text manhwa-row-content"><%- manhwa.content %></p>
          <div class="gap-2 p-1 g-0 mb-1 w-100">
            Genres:
            <div class="genres-manhwa">
              <% for(let genre of manhwa.genres){ %>
              <span class="badge genre-badge me-1"
                ><i class="fas fa-fist-raised"><%- genre %></i>
              </span>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>
