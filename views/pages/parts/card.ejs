<div class="card">
  <div class="row g-0">
    <div class="col-md-4">
      <img
        data-src="/manhwaImages/<%- manhwa.image %>"
        class="rounded-start manga-image lazyload"
        alt="<%= manhwa.slug %>" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%- manhwa.title %></h5>
        <p class="card-title">
          <small
            >Chapters <%- manhwa.chapter % 1 !== 0 ? manhwa.chapter.toFixed(1) :
            manhwa.chapter %> OF <%- manhwa.chapters % 1 !== 0
            ?manhwa.chapters.toFixed(1) : manhwa.chapters %></small
          >
          |
          <small class="card-time"
            >Update: <%= new Date(manhwa.lastUpdate).toLocaleString('nl-NL', {
            timeZone: Intl.DateTimeFormat().resolvedOptions().timeZone
            }).slice(0, -3) %></small
          ><br />

          <small class="card-status"
            >Status: <%- manhwa.status.replace(/\s/g, '') %>
            <i
              class="bi bi-circle-fill <%- manhwa.status.toLowerCase().replace(/\s/g, '') %>"></i
          ></small>
          |
          <small class="card-source"
            >Source: <%- manhwa.baseurl.split('/')[2].split('.')[0] %>
          </small>
        </p>
        <p class="card-text manhwa-row-content"><%- manhwa.content %></p>
        <div class="col-md-12">
          <form
            action="/auth/chapter/<%- manhwa.mid %>"
            class="d-flex flex-row"
            method="POST">
            <input
              class="input-number form-control m-2 bg-dark text-light"
              type="number"
              name="chapternumber"
              id=""
              step="0.1"
              pattern="[0-9]*"
              style="font-size: 20px"
              inputmode="numeric"
              tabindex="-1"
              max="<%- manhwa.chapters.toFixed(1) %>"
              min="1"
              required />
            <button
              type="submit"
              class="btn btn-primary m-2 form-control"
              value="Log chapter">
              Log chapter
            </button>
          </form>
          <div
            class="d-flex flex-row align-items-center mt-2 justify-content-between">
            <button
              type="submit"
              class="btn btn-danger"
              id="<%- manhwa.mid %>"
              value="remove">
              Remove
            </button>
            <button
              type="submit"
              class="btn <%- manhwa.reading == 0 ? 'btn-warning' : 'btn-success' %>"
              id="<%- manhwa.mid %>"
              value="later">
              <%- manhwa.reading == 0 ? "Read Later" : "Start reading" %>
            </button>
            <a href="<%- manhwa.link %>" target="_blank">Current Chapter</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
