<h1>Latest update</h1>
<div class="row" id="manhwas">
  <% for(let manhwa of manhwas){ %>
  <div class="col-md-6 mt-2 d-flex align-items-stretch">
    <div class="card">
      <a
        href="/manhwa/<%- manhwa.mid %>"
        class="card-link text-decoration-none text-reset">
        <div class="row card-height-dis">
          <div class="col-md-4">
            <img
              data-src="manhwaImages/<%- manhwa.image %>"
              class="rounded-start manga-image lazyload"
              alt="" />
          </div>
          <div class="col-md-8">
            <div class="card-body d-flex flex-column h-100">
              <h5 class="card-title text-decoration-underline">
                <%- manhwa.title %>
              </h5>
              <p class="card-text">
                <small class="card-chapter"
                  >Chapters <%- manhwa.chapters %></small
                >
                |
                <small class="card-time"
                  >Update: <%- new
                  Date(manhwa.lastUpdate).toLocaleString('nl-NL', { timeZone:
                  Intl.DateTimeFormat().resolvedOptions().timeZone }).slice(0,
                  -3) %>
                </small>
                <br />
                <small class="card-status"
                  >Status: <%- manhwa.status.replace(/\s/g, '') %>
                  <i
                    class="bi bi-circle-fill <%- manhwa.status.toLowerCase().replace(/\s/g, '') %>"></i
                ></small>
                |
                <small class="card-source"
                  >Source: <%- manhwa.baseurl.split('/')[2].split('.')[0];
                  %></small
                >
              </p>
              <p class="card-text manhwa-row-content"><%- manhwa.content %></p>
              <div class="mb-4 genres-manhwa">
                Genres: <% for(let genre of manhwa.genres){ %>
                <span class="badge genre-badge me-1"
                  ><i class="fas fa-fist-raised"><%- genre %></i>
                </span>
                <% } %>
              </div>
            </div>
          </div>
        </div></a
      >
    </div>
  </div>
  <% } %>
</div>
