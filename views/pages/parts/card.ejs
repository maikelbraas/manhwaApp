<div class="card">
  <div class="row g-0">
    <div class="col-md-4">
      <img
        src="<%- manhwa.image %>"
        class="rounded-start manga-image"
        alt="<%= manhwa.slug %>" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%- manhwa.title %></h5>
        <p class="card-title">
          <small
            >Chapters <%- manhwa.chapter %> OF <%- manhwa.chapters.toFixed(1)
            %></small
          >
          |
          <small class="card-time"
            >Update: <%= new Date(manhwa.lastUpdate).toLocaleString('nl-NL', {
            timeZone: Intl.DateTimeFormat().resolvedOptions().timeZone
            }).slice(0, -3) %></small
          ><br />

          <small class="card-status"
            >Status: <%- manhwa.status.replace(/\s/g, '') %>
            <i
              class="bi bi-circle-fill <%- manhwa.status.toLowerCase().replace(/\s/g, '') %>"></i
          ></small>
          |
          <small class="card-source"
            >Source: <%- manhwa.baseurl.split('/')[2].split('.')[0] %>
          </small>
        </p>
        <p class="card-text manhwa-row-content"><%- manhwa.content %></p>
        <div class="col-md-8">
          <form
            action="/auth/chapter/<%- manhwa.mid %>"
            class="d-flex flex-row"
            method="POST">
            <input
              class="input-number form-control m-2 bg-dark text-light"
              type="number"
              name="chapternumber"
              id=""
              step="0.1"
              pattern="[0-9]*"
              style="font-size: 20px"
              inputmode="numeric"
              tabindex="-1"
              max="<%- manhwa.chapters.toFixed(1) %>"
              min="0"
              required />
            <button
              type="submit"
              class="btn btn-primary m-2 form-control"
              value="Log chapter">
              Log chapter
            </button>
          </form>
          <div
            class="d-flex flex-row align-items-center justify-content-around">
            <button
              type="submit"
              class="btn btn-danger"
              id="<%- manhwa.mid %>"
              value="Remove">
              Remove
            </button>
            <a href="<%- manhwa.link %>" target="_blank">Current Chapter</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
